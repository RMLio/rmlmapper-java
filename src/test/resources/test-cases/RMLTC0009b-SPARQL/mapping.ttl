@prefix rr:         <http://www.w3.org/ns/r2rml#> .
@prefix foaf:       <http://xmlns.com/foaf/0.1/> .
@prefix ex:         <http://example.com/> .
@prefix xsd:        <http://www.w3.org/2001/XMLSchema#> .
@prefix rml:        <http://semweb.mmlab.be/ns/rml#> .
@prefix ql:         <http://semweb.mmlab.be/ns/ql#> .
@prefix activity:   <http://example.com/activity/> .
@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix d2rq:       <http://www.wiwiss.fu-berlin.de/suhl/bizer/D2RQ/0.1#> .
@prefix sd:         <http://www.w3.org/ns/sparql-service-description#> .
@base <http://example.com/base/> .

<#InputSPARQL1>
    a sd:Service ;
    sd:endpoint <http://localhost:PORT/ds1/sparql> ;
    sd:supportedLanguage sd:SPARQL11Query ;
    sd:resultFormat <http://www.w3.org/ns/formats/SPARQL_Results_JSON> .

<#InputSPARQL2>
    a sd:Service ;
    sd:endpoint <http://localhost:PORT/ds2/sparql> ;
    sd:supportedLanguage sd:SPARQL11Query ;
    sd:resultFormat <http://www.w3.org/ns/formats/SPARQL_Results_JSON> .

<TriplesMap1>
  a rr:TriplesMap;

  rml:logicalSource [
          rml:source <#InputSPARQL1>;
          rml:referenceFormulation ql:JSONPath;
          rml:iterator "$.results.bindings[*]";
          rml:query """
              PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
              PREFIX foaf: <http://xmlns.com/foaf/0.1/>
              PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
              SELECT ?Name ?ID ?Sport
              WHERE {
                  ?x  foaf:name ?Name ;
                      rdf:ID    ?ID ;
                      <http://example.com/plays> ?sportObject .
                  OPTIONAL { ?sportObject a <http://example.com/Sport> ;
                                            rdf:ID ?Sport . }
              } """
      ];


  rr:subjectMap [
      rr:template "http://example.com/resource/student_{ID.value}" ;
      rr:class <http://example.com/ontology/Student>;
      rr:graph <http://example.com/graph/students> ;
    ];

    rr:predicateObjectMap [
      rr:predicate foaf:name ;
      rr:objectMap [ rml:reference "Name.value" ];
      rr:graph <http://example.com/graph/students> ;
    ] ;

    rr:predicateObjectMap [
      rr:predicate <http://example.com/ontology/practises> ;
      rr:objectMap [
        a rr:RefObjectMap ;
        rr:parentTriplesMap <TriplesMap2>;
        rr:joinCondition [
          rr:child "Sport.value" ;
          rr:parent "ID.value" ;
        ]
      ];
      rr:graph <http://example.com/graph/practise> ;
    ] .

<TriplesMap2>
  a rr:TriplesMap;

  rml:logicalSource [
            rml:source <#InputSPARQL2>;
            rml:referenceFormulation ql:JSONPath;
            rml:iterator "$.results.bindings[*]";
            rml:query """
                PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
                PREFIX foaf: <http://xmlns.com/foaf/0.1/>
                PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
                SELECT ?ID ?Name
                WHERE {
                    ?x  foaf:name ?Name ;
                        rdf:ID    ?ID ;
                } """
        ];

  rr:subjectMap [
      rr:template "http://example.com/resource/sport_{ID.value}";
      rr:class <http://example.com/ontology/Sport>;
      rr:graph <http://example.com/graph/sports> ;
    ];

    rr:predicateObjectMap [
      rr:predicate rdfs:label ;
      rr:objectMap [ rml:reference "Name.value" ];
    ].
